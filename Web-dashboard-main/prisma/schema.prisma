// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id           Int        @id @default(autoincrement())
  name         String
  slug         String     @unique
  description  String?
  subcategories SubCategory[]
}

model SubCategory {
  id         Int      @id @default(autoincrement())
  name       String
  slug       String   @unique
  productCount Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Int
  stock     Int
  category  String
  image     String?
  createdAt DateTime @default(now())
}

model User {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  role   String
  avatar String?
}
